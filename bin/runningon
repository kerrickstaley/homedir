#!/usr/bin/env python3
import socket
import sys

HOST_TO_TAGS = {
    'biggun': {'linux'},
    'lillun': {'linux'},
    'kstaley-mbp151': {'macos', 'work'},
    'kstaley-mbp161': {'macos', 'work'},
    'kerrick-dev': {'linux', 'work'},
    'kerrick-thinkpad': {'linux', 'work'},
    'Kerricks-Air': {'macos'},
    'Kerricks-MacBook-Air.local': {'macos'},
    'steamdeck': {'linux'},
}

TAG_TO_HOSTS = {}
for host, tags in HOST_TO_TAGS.items():
    for tag in tags:
        TAG_TO_HOSTS.setdefault(tag, set())
        TAG_TO_HOSTS[tag].add(host)


hostname = socket.gethostname()

for arg in sys.argv[1:]:
    if arg in HOST_TO_TAGS:
        if arg == hostname:
            sys.exit(0)
    elif arg in TAG_TO_HOSTS:
        if hostname in TAG_TO_HOSTS[arg]:
            sys.exit(0)
    else:
        raise Exception('Unrecognized argument {}!'.format(sys.argv[1]))

sys.exit(1)
