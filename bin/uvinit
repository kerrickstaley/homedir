#!/bin/bash
set -euo pipefail
gitinit
uv init
uv lock
uv venv
echo '__pycache__' > .gitignore
cat >> pyproject.toml << 'EOF'

[build-system]
requires = ["uv_build"]
build-backend = "uv_build"

[tool.uv.build-backend]
module-root = "."
module-name = []
EOF
git add pyproject.toml uv.lock .python-version .gitignore README.md
git commit -m 'uv init'
rm main.py
